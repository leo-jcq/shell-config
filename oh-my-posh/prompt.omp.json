{
    "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
    "blocks": [
        {
            "alignment": "left",
            "segments": [
                {
                    "background": "#0077c2",
                    "foreground": "#ffffff",
                    "background_templates": ["{{if .Root}}#ef5350{{end}}"],
                    "leading_diamond": "\u256d\u2500\ue0b6",
                    "style": "diamond",
                    "template": "{{if .Root}}\u0023{{else}}\u0024{{end}} {{ .UserName }}\u0040{{ .HostName }} ",
                    "type": "session"
                },
                {
                    "background": "#4caf50",
                    "foreground": "#193549",
                    "powerline_symbol": "\ue0b0",
                    "properties": {
                        "linux": "\ue712",
                        "macos": "\ue711",
                        "windows": "\ue70f"
                    },
                    "style": "powerline",
                    "template": " {{.Icon}}",
                    "type": "os"
                },
                {
                    "background": "#4caf50",
                    "foreground": "#193549",
                    "powerline_symbol": "\ue0b0",
                    "style": "powerline",
                    "template": "{{ .Name }} ",
                    "type": "shell"
                },
                {
                    "background": "#ef5350",
                    "foreground": "#2d3436",
                    "background_templates": ["{{ if .Writable }}#FF9248{{end}}"],
                    "powerline_symbol": "\ue0b0",
                    "properties": {
                        "style": "full"
                    },
                    "style": "powerline",
                    "template": " \uf74a {{ path .Path .Location }} ",
                    "type": "path"
                },
                {
                    "background": "#95FFA4",
                    "foreground": "#193549",
                    "background_templates": [
                        "{{ if or (.Working.Changed) (.Staging.Changed) }}#ffeb95{{ end }}",
                        "{{ if and (gt .Ahead 0) (gt .Behind 0) }}#c5e478{{ end }}",
                        "{{ if or (gt .Ahead 0) (.Behind 0) }}#C792EA{{ end }}"
                    ],
                    "powerline_symbol": "\ue0b0",
                    "properties": {
                        "fetch_status": true,
                        "fetch_upstream_icon": true,
                        "cherry_pick_icon": "\u2713 ",
                        "commit_icon": "\u25b7 ",
                        "merge_icon": "\u25f4 ",
                        "no_commits_icon": "\u274c",
                        "rebase_icon": "\u2c62 ",
                        "tag_icon": "\u25b6 "
                    },
                    "style": "powerline",
                    "template": " {{ url .UpstreamIcon .UpstreamURL }}{{ .HEAD }}{{ if and (eq .Ahead 0) (eq .Behind 0) }} \u2261{{end}}{{ if gt .Ahead 0 }} \u2191{{.Ahead}}{{end}}{{ if gt .Behind 0 }} \u2193{{.Behind}}{{end}} {{ if .Working.Changed }}\uf044{{ if gt (add .Working.Added .Working.Untracked) 0}} +{{ add .Working.Added .Working.Untracked }}{{end}}{{ if gt .Working.Modified 0}} ~{{ .Working.Modified }}{{end}}{{ if gt .Working.Deleted 0}} -{{ .Working.Deleted }}{{ end }}{{ end }}",
                    "type": "git"
                },
                {
                    "foreground": "#ffffff",
                    "background": "#6ca35e",
                    "powerline_symbol": "\ue0b0",
                    "template": " îœ˜ {{ .Full }} ",
                    "style": "powerline",
                    "type": "node"
                },
                {
                    "background": "#83769c",
                    "foreground": "#ffffff",
                    "properties": {
                        "always_enabled": true
                    },
                    "style": "diamond",
                    "template": " \ufa1e {{ .FormattedMs }} ",
                    "trailing_diamond": "\ue0b4",
                    "type": "executiontime"
                }
            ],
            "type": "prompt"
        },
        {
            "alignment": "left",
            "newline": true,
            "segments": [
                {
                    "foreground": "#21c7c7",
                    "style": "plain",
                    "template": "\u2570\u2500",
                    "type": "text"
                },
                {
                    "foreground": "#e0f8ff",
                    "foreground_templates": ["{{ if gt .Code 0 }}#ef5350{{ end }}"],
                    "properties": {
                        "always_enabled": true
                    },
                    "style": "plain",
                    "template": "\ue285",
                    "type": "exit"
                }
            ],
            "type": "prompt"
        }
    ],
    "final_space": true,
    "console_title_template": "{{.Folder}} {{if .Root}}\u0023{{else}}\u0024{{end}}",
    "version": 2
}
