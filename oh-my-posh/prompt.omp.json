{
    "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
    "final_space": false,
    "version": 2,
    "console_title_template": "{{.Folder}}{{if .Root}} \u0023 {{else}} \u0024 {{end}}",
    "blocks": [
        {
            "type": "prompt",
            "alignment": "left",
            "segments": [
                {
                    "type": "text",
                    "style": "plain",
                    "foreground": "#0077C2",
                    "template": "\u256D\u2500",
                    "properties": {
                        "always_enabled": true
                    }
                },
                {
                    "type": "executiontime",
                    "style": "diamond",
                    "leading_diamond": "\uE0B6",
                    "trailing_diamond": "\uE0B0",
                    "foreground": "#FFFFFF",
                    "background": "#0077C2",
                    "template": " <b>\uFBAB</b> {{ .FormattedMs }} ",
                    "properties": {
                        "always_enabled": true
                    }
                },
                {
                    "type": "text",
                    "style": "powerline",
                    "powerline_symbol": "\ue0B0",
                    "foreground": "#3A86FF",
                    "background": "#242424",
                    "template": " {{ .UserName }}\u0040{{ .HostName }} "
                },
                {
                    "type": "git",
                    "style": "powerline",
                    "powerline_symbol": "\ue0B0",
                    "foreground": "#193549",
                    "background": "#95FFA4",
                    "properties": {
                        "fetch_stash_count": true,
                        "fetch_status": true,
                        "fetch_upstream_icon": true
                    },
                    "template": " {{ .UpstreamIcon }}{{ .HEAD }} "
                },
                {
                    "type": "path",
                    "style": "diamond",
                    "trailing_diamond": "\uE0B4",
                    "foreground": "#FFFFFF",
                    "background": "#FF9248",
                    "template": " \uF74A {{ .PWD }} ",
                    "properties": {
                        "style": "full"
                    }
                }
            ]
        },
        {
            "alignment": "right",
            "segments": [
                {
                    "properties": {
                        "root_icon": "\uf292 "
                    },
                    "style": "diamond",
                    "template": " \uf0e7 ",
                    "type": "root"
                },
                {
                    "foreground": "#94ffa2",
                    "style": "diamond",
                    "template": " <#ffffff>CPU:</> {{ round .PhysicalPercentUsed .Precision }}% ",
                    "type": "sysinfo"
                },
                {
                    "foreground": "#81ff91",
                    "style": "diamond",
                    "template": "<#ffffff>\uf6dc</> <#ffffff>RAM:</> {{ (div ((sub .PhysicalTotalMemory .PhysicalFreeMemory)|float64) 1000000000.0) }}/{{ (div .PhysicalTotalMemory 1000000000.0) }}GB ",
                    "type": "sysinfo"
                }
            ],
            "type": "prompt"
        },
        {
            "type": "prompt",
            "alignment": "left",
            "newline": true,
            "segments": [
                {
                    "type": "text",
                    "style": "diamond",
                    "foreground": "#21C7C7",
                    "template": "\u2570\u2500",
                    "properties": {
                        "always_enabled": true
                    }
                },
                {
                    "type": "text",
                    "style": "plain",
                    "newline": true,
                    "foreground": "#e0f8ff",
                    "template": "\ue285{{if .Root}} \u0023 {{else}} \u0024 {{end}}"
                }
            ]
        }
    ]
}
